-
    var myFullName = 'Iulian Carnaru';
    var myJobTitle = 'Junior Web Developer';
    var socialList = [
        {icon: 'facebook', url: 'https://facebook.com/iulian.carnaru'},
        {icon: 'linkedin2', url: 'https://www.linkedin.com/in/iulian-carnaru-51aa63108/'},
        {icon: 'github', url: 'https://github.com/iuliancarnaru'},
        {icon: 'twitter', url: 'https://twitter.com/'},
        {icon: 'stackoverflow', url: 'https://stackoverflow.com/users/10256669/iulian-carnaru'},
        {icon: 'youtube', url: 'https://www.youtube.com/channel/UCDNLgYQX5wDKSEDTBn-ht3Q'}
    ];

#landing-page
.landing-page
    .landing-page__wrapper
        h1.landing-page__name=myFullName
        h2.landing-page__title=myJobTitle

        ul.landing-page__social
            each social, key in socialList
                li.landing-page__item
                    label.landing-page__label(for=`message-box-id-${key}`)
                        span(class=`icon-${social.icon}`)
        .landing-page__box-body
            input.landing-page__box-radio(type="radio", name="radio-buttons", checked, id="default-radio-button")
            .landing-page__box-message Click the above icons to reveal
            .landing-page__box-header
                .landing-page__box-info Click to visit
                label.landing-page__box-close(for="default-radio-button") &times;
            each social, key in socialList
                input.landing-page__box-radio(type="radio", name="radio-buttons", id=`message-box-id-${key}`)
                .landing-page__box-message
                    a.landing-page__box-link(href=social.url, target="_blank")=social.url